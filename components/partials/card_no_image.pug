if data.stationHeaderLogoSVG
    picture.missing-image.brand-background-color(
        style={
            'background-image' : 'url('+data.stationHeaderLogoSVG+')'
        }
    )
        source(
            srcset=data.placeholderImage
            media="(min-width: 439px)"
        )
        img(
            src=data.placeholderImageSmall
            alt=data.placeholderAltText 
        )
else
    picture.missing-image.missing-image--hub(
        style={
            'background-image': 'url('+data.missingHubImage+')'
        }
    )
        source(
            srcset=data.placeholderImage
            media="(min-width: 439px)"
        )
        img(
            src=data.placeholderImageSmall
            alt=data.placeholderAltText
        )
