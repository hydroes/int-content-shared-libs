<ul>
    {@paginate page=currentPage totalPages=totalPages path="{pathNoPage}/{n}/"}
    <li><a class="btn" href="{path}">{n}</a></li>
    {:current}
    <li><a class="on bg--product txt--productreverse pagination-active" href="{path}">{n}</a></li>
    {:prev}
    <li><a class="nextprev" href="{path}">&lt;</a></li>
    {:next}
    <li><a class="nextprev" href="{path}">&gt;</a></li>
    {/paginate}
</ul>