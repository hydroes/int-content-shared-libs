.embeds-giphy
  -
    // convert datasources
    if (data.url.indexOf('/gifs/') !== -1) {
      data.url = data.url.replace('/gifs/', '/embed/')
      var giphyId = data.url.substr(data.url.lastIndexOf('-') + 1)
      var giphyUrl = data.url.substr(0, data.url.lastIndexOf('/') + 1)
      data.url = giphyUrl + giphyId
    }

  // @todo: use iframe version bcuz of dynamic height error
  div(style='width:100%;height:0;padding-bottom:96%;position:relative;')
    iframe.giphy-embed(src=data.url, width='100%', height='100%', style='position:absolute', frameborder='0', allowfullscreen='')
