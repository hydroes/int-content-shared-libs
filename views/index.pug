doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title Bauer shared components
    link(href='https://cdn.bauerassets.com/global-fonts/539934/62925A996736230B3.css', media='none', onload='if(media!="all")media="all"', rel='stylesheet', type='text/css')
    noscript
      link(rel='stylesheet', href='https://cloud.typography.com/777534/6275952/css/fonts.css')
    link(href='dist/style.min.css', rel='stylesheet')
    link(href='/guide.css', rel='stylesheet')
    script(src='dist/script.min.js')
  body
    header.header
      .header__items
        img.header-logo(src='http://www.bauermedia.co.uk/images/logo-bauer.png')
        h1
          | Styleguide
          span#header__version
            |  #{pkg.version}
      nav.navbar.row
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        // Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse#navbar
          ul.nav.navbar-nav
            li
              a(href='#cards') Cards
            li
              a(href='#collections') Collections
            li
              a(href='#gallery') Gallery
            li
              a(href='#misc') Miscellaneous
        // /.navbar-collapse
    .main-container
      .container-fluid
        .style-guide
          .row.style-guide__item
            .col-md-6
              .style-guide__item__label
                h2 Test Component
            .col-md-6
              #test_component!= shared.component('test', {title: 'test button'})
          section#cards
            .section-header
              h2 Cards
            .row.style-guide__item
              .col-md-6
                .style-guide__item__label
                  h2 Large Content Card
              .col-md-6
                .large-content-card!= shared.component('large_content_card', shared.data('large_content_card/large_content_card.json'))
            .row.style-guide__item
              .col-md-8.col-xl-9
                .style-guide__item__label
                  h2 Small Content Card
              .col-sm-6.col-md-4.col-xl-3
                .content-card-small!= shared.component('small_content_card', shared.data('small_content_card/small_content_card.json'))
          // =============== Images ===================
          section#collections
            .section-header
              h2 Images
            .row.style-guide__item
              .style-guide__item__label
                h2 Image
              .col-md-6
              .col-md-6
                #image!= shared.component('image', shared.data('image/image.json'))
          // =============== Gallery ===================
          section.section-header#gallery
            h2 Gallery
          // =============== Miscallaneous ===================
          section#misc
            .section-header
              h2 Miscallaneous
            .row.style-guide__item
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Pagination
                .col-md-6
                  #pagination-component!= shared.component('pagination', shared.data('pagination/pagination.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Breadcrumbs
                .col-md-6
                  #breadcrumbs!= shared.component('breadcrumbs', shared.data('breadcrumbs/breadcrumbs.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Social Sharing
                .col-md-6
                  #social-sharing!= shared.component('social_sharing', shared.data('social_sharing/social_sharing.json'))
              .row
                .col-md-12
                  .style-guide__item__label
                    h2 Facebook Open Graph Tags
                    h2 Used for sharing on social sites, e.g. Facebook
                .col-md-3
                  h3 Open Graph Tags: Article - with video
                  pre.code
                    -
                      let ogData = shared.data('og_tags/og_tags.json')
                      let ogTagsVideo = ogData
                      delete ogTagsVideo.data.image
                    code.og-tags-video= shared.component('og_tags', ogTagsVideo)
                .col-md-3
                  h3 Open Graph Tags: Article - with image
                  pre.code
                    code.og-tags-image= shared.component('og_tags', ogData)
                .col-md-3
                  h3 Open Graph Tags: Article - without video or image
                  pre.code
                    -
                      let ogDataNoHero = ogData
                      delete ogDataNoHero.data.video
                    code.og-tags-no-hero= shared.component('og_tags', ogDataNoHero)
                .col-md-3
                  h3 Open Graph Tags: For non-article pages
                  pre.code
                    -
                      let ogTagsArticle = ogData
                      delete ogTagsArticle.data.article
                    code.og-tags= shared.component('og_tags', ogTagsArticle)
              .row
                .col-md-2
                  .style-guide__item__label
                    h2 Twitter Card Tags
                .col-md-5
                  h3 Twitter Card Tags: with image
                  pre.code
                    code.twitter-card-tags-image= shared.component('twitter_card_tags', shared.data('twitter_card_tags/twitter_cards_tags.json'))
                .col-md-5
                  h3 Twitter Card Tags: without image
                  pre.code
                    code.twitter-card-tags= shared.component('twitter_card_tags', shared.data('twitter_card_tags/twitter_cards_tags.json'))
              // ============== Embeds ================
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds - Twitter
                .col-md-6
                  #embeds-twitter!= shared.component('twitter', shared.data('twitter/twitter.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds Youtube
                .col-md-6
                  #embeds-youtube!= shared.component('youtube', shared.data('youtube/youtube.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds Vimeo
                .col-md-6
                  #embeds-vimeo!= shared.component('vimeo', shared.data('vimeo/vimeo.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds- Facebook
                .col-md-6
                  #embeds-facebook!= shared.component('facebook', shared.data('facebook/facebook.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds Instagram
                .col-md-6
                  #embeds-instagram!= shared.component('instagram', shared.data('instagram/instagram.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds Giphy
                .col-md-6
                  #embeds-giphy!= shared.component('giphy', shared.data('giphy/giphy.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds Brightcove
                .col-md-6
                  #embeds-brightcove!= shared.component('brightcove', shared.data('brightcove/brightcove.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds Audioboom
                .col-md-6
                  #embeds-audioboom!= shared.component('audioboom', shared.data('audioboom/audioboom.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds Soundcloud
                .col-md-6
                  #embeds-soundcloud!= shared.component('soundcloud', shared.data('soundcloud/soundcloud.json'))
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds Bauercreative
                .col-md-6
                  #embeds-bauercreative!= shared.component('bauercreative', shared.data('bauercreative/bauercreative.json'))
              // @todo engagesciences
              .row
                .col-md-6
                  .style-guide__item__label
                    h2 Embeds Ntr
                .col-md-6
                  #embeds-ntr!= shared.component('ntr', shared.data('ntr/ntr.json'))
    .device-view
      .visible-xs.device.phone
      .visible-sm.device.tablet
      .visible-md.device.tablet
      .visible-lg.device.desktop
      .visible-xl.device.desktop
