mixin smallContentCard(data)
  article.content-card.content-card--small
    .row
      a.content-card__link.col-xs-4.col-sm-12(href=data.url) 
        include ../partials/small_card_image
      .content-card--small__info.content-card__info.col-xs-8.col-sm-12
        include ../partials/title
        include ../partials/card_date_time
