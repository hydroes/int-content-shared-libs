  "keywords": [
    "bauer",
    "shared",
    "templates"
  ],
  "license": "MIT",
  "main": "index.js",
  "maintainers": [
    {
      "name": "bdawg",
      "email": "briangouws@hotmail.com"
    }
  ],
  "name": "bauer-shared-web-components",
  "pre-commit": [
    "validate-js-standard",
    "validate-pug",
    "validate-sass",
    "validate-commitmsg",
    "unit-tests"
  ],
  "readme": "README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BauerXcel/shared-templates.git"
  },
  "scripts": {
    "lint": "jshint .",
    "start": "gulp",
    "test": "USE_PACKAGE_QAHOST=1 nightwatch --config nightwatch.conf.js --retres 3 --tag desktop --tag mobile --tag tablet; npm run unit-tests",
    "posttest": "gulp generate-test-reports",
    "validate-js-standard": "standard",
    "validate-pug": "pug-lint components/**/*.pug",
    "validate-commitmsg": "validate-commit-msg -p eslint",
    "validate-sass": "sass-lint -c .sass-lint.yml 'components/**/*.scss' -v -q",
    "validate": "npm ls",
    "e2e-tests": "nightwatch --config nightwatch.conf.js --retres 3 --tag desktop --tag mobile --tag tablet",
    "unit-tests": "mocha 'tests/unit/**/*.js' --timeout 10000"
  },
  "standard": {
    "ignore": [
      "docs/dist/**",
      "components/shared/sass/bootstrap-sass-3.3.7"
    ]
  }
}
